@model Dominio.Cliente
@using Dominio

@{
    ViewBag.Title = "Ganancia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ganancia prevista</h2>


<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rut):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rut)
        </dd>

        <dt>
            Cliente desde:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Antiguedad)
        </dd>

    </dl>

</div>

<br />


<div class="ganancia">
    <h1>$ @ViewBag.ganancia</h1>
</div>

<br />

<h5>* Al dia de hoy @DateTime.Today.ToShortDateString()</h5>

<br />
<p>Importaciones que están afectando el calculo: </p>

<table class="table table-hover">
    <tr>
        <th>
            Fecha de Ingreso
        </th>
        <th>
            Salida Prevista
        </th>

        <th>
            Cantidad
        </th>
        <th>
            Precio Unitario
        </th>
      

    </tr>

           @foreach (Importacion i in ViewBag.lista){
            <tr>
                <td>
                    @i.FechaIngreso.ToShortDateString()
                </td>
                <td>
                    @i.SalidaPrevista.ToShortDateString()
                </td>

                <td>
                    @i.Cantidad
                </td>
                <td>
                    @i.PrecioUnitario
                </td>
             


            </tr>


    }

</table>



<div>
    @Html.ActionLink("Volver a la lista", "List", "Cliente")
</div>

