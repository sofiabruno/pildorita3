@model IEnumerable<WebMVC.ViewModels.ViewModelProducto>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de productos</h2>
<br />
<h4>Stock actualizado a la fecha de hoy (@DateTime.Now.ToShortDateString())</h4>

<br />
<br />
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        @if (Session["rol"].ToString() == "deposito")
        {
            <th></th>
        }
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
       @if (Session["rol"].ToString() == "deposito")
       {
        <td>
            @Html.ActionLink("Importar", "Create", "Importacion", new { codProd = item.Codigo }, null)
        </td>
        }
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back", "Index", "Home")
</div>