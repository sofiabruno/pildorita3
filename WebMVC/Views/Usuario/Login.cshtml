
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>


<div class="form-horizontal">
    <form action="/Usuario/Validar" method="post">
        <h4>Usuario</h4>
        <hr />
        <div class="form-group">
            <label for="ci" class="control-label col-md-2">Ci</label>
            <div class="col-md-10">
                <input type="number" class="form-control" name="ci" required /><br />
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="control-label col-md-2">Contraseña</label>
            <div class="col-md-10">
                <input type="password" class="form-control" name="password" required /><br />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Ingresar</button>
            </div>
        </div>

    </form>
</div>

@if (ViewBag.mensaje != null)

{
    <div class="text-danger" role="alert">
        <p>@ViewBag.mensaje</p>
    </div>
}
<div>
    @Html.ActionLink("Back", "Index", "Home")
</div>